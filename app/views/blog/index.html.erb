<h1>Blog Posts</h1>

<table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Content</th>
        <th>Publish Date & Time</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @posts.each do |post| %>
          <tr>
            <td><%= post.title %></td>

            <% if post.publish_at  %>
                <td><%= truncate post.content, length: 125 %></td>
                <td><%= link_to 'read more', blog_path(post), :class => "btn btn-inverse btn-mini" %></td>
                <td><%=  post.publish_at.strftime('%m/%d/%Y %H:%M') %></td>
            <% else %>
                <td>&nbsp;</td>
            <% end  %>


          </tr>
      <% end %>
    </tbody>
</table>
<br />

