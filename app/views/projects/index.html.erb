<h1>Project List</h1>

<table class="table table-striped">
  <tr>
    <th></th>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @projects.each do |project| %>
      <tr>
        <td><%= %></td>
        <td><%= project.title %></td>
        <td>
          <%= image_tag project.image_url(:thumb) %>
        </td>
        <td><%= project.content %></td>
        <td><%= link_to 'Show', project_path(project), :class => "btn btn-inverse btn-mini" %></td>

        <% if current_user %>
            <td><%= link_to 'Edit', edit_project_path(project), :class => "btn btn-primary btn-mini" %></td>
            <td><%= link_to 'Delete', projects_path(project), :class => "btn btn-danger btn-mini", :confirm => 'Are you sure?',
                            :method => :delete %></td>
        <% end %>
      </tr>
  <% end %>
</table>

<br />

<%= link_to 'New projects', new_project_path, :class => "btn btn-primary" %>

