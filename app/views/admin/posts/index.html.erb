<h1>Blog Posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Publish Date & Time</th>
    <th></th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>

        <% if post.publish_at  %>
        <td><%= truncate post.content, length: 100 %></td>
        <td><%= link_to 'read more', admin_post_path(post) %></td>
        <td><%=  post.publish_at.strftime('%m/%d/%Y %H:%M') %></td>
        <% else %>
          <td>&nbsp;</td>
        <% end  %>

        <td><%= link_to 'Edit', edit_admin_post_path(post) %></td>
        <td><%= link_to 'Delete', admin_post_path(post), :confirm => 'Are you sure?',
                        :method => :delete %></td>
      </tr>
  <% end %>
</table>

<br />

<%= link_to 'New post', new_admin_post_path %>